<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent_black"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_ring_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:gravity="center"
            android:text="Choose a Ringtone"
            android:textColor="@color/black_33"
            android:textSize="20sp" />

        <TextView style="@style/horizontal_line_style" />
        <RadioGroup
            android:id="@+id/ring_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/tv_drugring_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:gravity="left"
            android:text="Ringtone 1"
            android:textColor="@color/black_33"
            android:textSize="20sp" />

        <TextView style="@style/horizontal_line_style" />

        <RadioButton
            android:id="@+id/tv_drugring_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:gravity="left"
            android:text="Ringtone 2"
            android:textColor="@color/black_33"
            android:textSize="20sp" />

        <TextView
            style="@style/horizontal_line_style"
            />

        <RadioButton
            android:id="@+id/tv_drugring_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:gravity="left"
            android:text="Ringtone 3"
            android:textColor="@color/black_33"
            android:textSize="20sp" />

        <TextView
            style="@style/horizontal_line_style"
             />

        <RadioButton
            android:id="@+id/tv_drugring_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:gravity="left"
            android:text="Ringtone 4"
            android:textColor="@color/black_33"
            android:textSize="20sp" />

        <TextView
            style="@style/horizontal_line_style"
            />
        <RadioButton
            android:id="@+id/tv_drugring_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@null"
            android:gravity="left"
            android:text="Ringtone 5"
            android:textColor="@color/black_33"
            android:textSize="20sp" />

        <TextView
            style="@style/horizontal_line_style"
            />
        <RadioButton
            android:id="@+id/tv_drugring_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
